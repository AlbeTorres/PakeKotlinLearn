<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PakeKotlinLearn" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulclaro</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/negrogrisoso</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>


        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>




    </style>

    <style name="Seekbar" parent="Widget.AppCompat.SeekBar">
        <item name="android:background">@drawable/curvo15negrogrisoso</item>
        <item name="android:elevation">4dp</item>
        <item name="android:progressTint">@color/azulverdoso</item>
        <item name="android:thumbTint">@color/azulverdoso</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="textView" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewnostyle" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="inputlayut" >
        <item name="android:background">@drawable/curvo15negrogrisoso</item>
        <item name="android:elevation">4dp</item>
        <item name="boxBackgroundMode">outline</item>

    </style>

    <style name="constraintcreardisco" >
        <item name="android:background">@drawable/curvoderechatopblack</item>
    </style>

    <style name="editetxcreardisco" >
        <item name="android:background">@drawable/curvo15negrogrisoso</item>
        <item name="hintTextColor">@color/white</item>
        <item name="errorTextColor">@color/white</item>
        <item name="errorIconTint">@color/white</item>
    </style>

    <style name="toolbar">
    <item name="android:background">@color/black</item>
    </style>

    <style name="floatingbutton">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="tab">
        <item name="android:background">@drawable/curvo15negrogrisoso</item>
    </style>

    <style name="spinner">
        <item name="android:popupBackground">@drawable/curvo15negrogrisoso</item>
        <item name="android:dropDownItemStyle">@color/white</item>
    </style>

    <style name="Constspinner">
        <item name="android:background">@drawable/curvo15negrogrisoso</item>
    </style>

    <style name="search">
        <item name="android:background">@drawable/curvo15negrogrisoso</item>
    </style>


</resources>